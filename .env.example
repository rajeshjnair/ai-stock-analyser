# Application Environment
NODE_ENV=development

# MongoDB Configuration
MONGO_USER=admin
MONGO_PASSWORD=your_secure_password_here
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=ai_stock_analyzer

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Firebase Authentication
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# External APIs
FINNHUB_API_KEY=your_finnhub_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# Application Configuration
PORT=3000
API_PORT=3001
WS_PORT=3002

# CORS Configuration
CORS_ORIGIN=http://localhost:80,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:80,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Stock Data Configuration
STOCK_UPDATE_INTERVAL=60000
STOCK_CACHE_TTL=300
MAX_SYMBOLS_PER_REQUEST=10

# AI Analysis Configuration
AI_ANALYSIS_TIMEOUT=30000
AI_MAX_RETRY_ATTEMPTS=3
AI_CACHE_TTL=3600
